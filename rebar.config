%% -*- erlang -*-
{minimum_otp_vsn, "18"}.

{erl_opts,
 [debug_info,
  {parse_transform, lager_transform},
  {lager_truncation_size, 10485760},
  {i, "include"}]}.

{deps, [{lager, "3.9.2"}]}.

{plugins, [rebar3_diameter_compiler, relflow]}.

{provider_hooks, [{pre, [{compile, {diameter, compile}}, {clean, {diameter, clean}}]}]}.

{relx,
 [{release, {dccaclient, "1.0.0"}, [dccaclient]},
  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},
  {dev_mode, true},
  {include_erts, false},
  {extended_start_script, true}]}.

{profiles,
 [{prod, [{relx, [{dev_mode, false}, {include_erts, true}, {include_src, false}]}]}]}.

{cover_enabled, true}.

{clean_files,
 ["ebin/*.beam", "priv/log/*", "deps/*", "log/*", "rel/dccaclient", "*.dump"]}.

{lib_dirs, []}.
